<UserControl x:Class="Examiner.TimeSetterUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Examiner"
             mc:Ignorable="d" 
             d:DesignHeight="15" d:DesignWidth="105">
    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>

        <TextBox Margin="2 2" x:Name="hourTextBox" Grid.Column="0"></TextBox>
        <Label VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" Foreground="Black">:</Label>
        <TextBox Margin="2 2" x:Name="minTextBox" Grid.Column="2"></TextBox>
        <Label VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="3" Foreground="Black">:</Label>
        <TextBox Margin="2 2" x:Name="secondTextBox" Grid.Column="4"></TextBox>
        
    </Grid>
</UserControl>
